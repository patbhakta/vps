# Pipecat Core Configuration
PIPECAT_HOST=0.0.0.0
PIPECAT_PORT=8080
PIPECAT_LOG_LEVEL=INFO
PIPECAT_ENV=production

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_BASE_URL=https://api.openai.com/v1

# Alternative LLM Providers (uncomment as needed)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# GOOGLE_API_KEY=your-google-api-key-here
# AZURE_OPENAI_API_KEY=your-azure-openai-key-here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Text-to-Speech Configuration
TTS_PROVIDER=openai
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy

# Alternative TTS Providers (uncomment as needed)
# ELEVEN_LABS_API_KEY=your-elevenlabs-api-key-here
# ELEVEN_LABS_VOICE_ID=your-voice-id-here
# AZURE_TTS_API_KEY=your-azure-tts-key-here
# AZURE_TTS_REGION=eastus

# Speech-to-Text Configuration
STT_PROVIDER=openai
OPENAI_STT_MODEL=whisper-1

# Alternative STT Providers (uncomment as needed)
# DEEPGRAM_API_KEY=your-deepgram-api-key-here
# AZURE_STT_API_KEY=your-azure-stt-key-here
# AZURE_STT_REGION=eastus

# WebRTC Configuration
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVER=
WEBRTC_TURN_USERNAME=
WEBRTC_TURN_PASSWORD=

# Redis Configuration (using existing instance)
REDIS_URL=redis://:your-existing-redis-password@redis-on-advin:6379/0
REDIS_HOST=redis-on-advin
REDIS_PORT=6379
REDIS_PASSWORD=your-existing-redis-password
REDIS_DB=1

# PostgreSQL Configuration (using existing instance)
POSTGRES_HOST=pg-on-advin
POSTGRES_PORT=5432
POSTGRES_DB=pipecat
POSTGRES_USER=your-existing-postgres-user
POSTGRES_PASSWORD=your-existing-postgres-password
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Session Configuration
SESSION_TIMEOUT=1800
MAX_CONCURRENT_SESSIONS=10
ENABLE_SESSION_RECORDING=true

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024
ENABLE_NOISE_SUPPRESSION=true
ENABLE_ECHO_CANCELLATION=true

# Bot Configuration
BOT_NAME=PipecatBot
BOT_PERSONALITY=friendly_assistant
CONVERSATION_TIMEOUT=300
MAX_CONVERSATION_LENGTH=50

# API Keys for External Services
WEATHER_API_KEY=your-weather-api-key-here
NEWS_API_KEY=your-news-api-key-here

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10

# Security Configuration
ENABLE_CORS=true
CORS_ORIGINS=*
API_KEY_REQUIRED=false
API_KEY=your-secure-api-key-here

# Logging Configuration
LOG_FILE=/app/logs/pipecat.log
LOG_ROTATION=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Performance Configuration
WORKER_THREADS=4
QUEUE_MAX_SIZE=1000
PROCESSING_TIMEOUT=30

# Development/Debug Configuration
DEBUG_MODE=false
ENABLE_METRICS=true
METRICS_PORT=9090

# Voice Activity Detection
VAD_ENABLED=true
VAD_SENSITIVITY=0.5
VAD_MIN_SPEECH_DURATION=0.5
VAD_MIN_SILENCE_DURATION=0.5

# Tailscale Configuration
TS_HOSTNAME=pipecat-on-advin
TS_EXTRA_ARGS=--auth-key file:/run/secrets/tsauthkey

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=pipecat