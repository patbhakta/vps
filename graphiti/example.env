# Neo4j Configuration
NEO4J_AUTH=neo4j/your-secure-password-here
NEO4J_server_memory_heap_initial__size=512m
NEO4J_server_memory_heap_max__size=2G
NEO4J_server_memory_pagecache_size=1G
NEO4J_dbms_connector_bolt_listen__address=0.0.0.0:7687
NEO4J_dbms_connector_http_listen__address=0.0.0.0:7474
NEO4J_dbms_security_procedures_unrestricted=gds.*,apoc.*
NEO4J_dbms_security_procedures_allowlist=gds.*,apoc.*

# Graphiti Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password-here
GRAPHITI_LOG_LEVEL=INFO
GRAPHITI_API_PORT=8080

# Optional: OpenAI API Key for Graphiti (if using AI features)
# OPENAI_API_KEY=your-openai-api-key-here

# Optional: Additional Neo4j Plugins
NEO4J_PLUGINS=["apoc", "gds"]

# Tailscale Configuration (optional overrides)
TS_HOSTNAME=neo4j-on-advin
TS_EXTRA_ARGS=--auth-key file:/run/secrets/tsauthkey

# Docker Compose Project Name (optional)
COMPOSE_PROJECT_NAME=neo4j-graphiti